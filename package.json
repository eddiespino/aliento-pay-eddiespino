{
  "name": "aliento-pay",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check && tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.astro",
    "lint:fix": "eslint src --ext .ts,.tsx,.astro --fix",
    "lint:css": "stylelint src/**/*.{css,astro}",
    "lint:css:fix": "stylelint src/**/*.{css,astro} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,astro,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,astro,json}",
    "quality": "npm run type-check && npm run lint && npm run lint:css && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run lint:css:fix && npm run format",
    "test:architecture": "npx ts-node src/test-new-architecture.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.3.0",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/ts-plugin": "^1.10.4",
    "@astrojs/vercel": "^8.2.2",
    "@hiveio/wax": "^1.27.6-rc7",
    "astro": "^5.10.1",
    "keychain-sdk": "^0.9.4",
    "path-to-regexp": "^6.3.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-prettier": "^5.2.1",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.21.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript-eslint": "^8.35.1"
  }
}
