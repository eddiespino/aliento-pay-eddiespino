---
import Layout from '../layouts/Layout.astro';
import { enTranslations, esTranslations } from '../i18n';

const currentYear = new Date().getFullYear();
const logoUrl = 'https://files.peakd.com/file/peakd-hive/aliento/1000911907.jpg';

// Pass translations to the client
const translations = {
  en: enTranslations.landing,
  es: esTranslations.landing
};
---

<Layout
  title="Aliento Pay — Delegate Hive Power & Earn"
  description="Delegate to Aliento and choose how you get paid: HIVE, HBD, Hive Power — or donate to boost the project."
>
  <div class="min-h-screen bg-[var(--bg)] text-[var(--fg)]">

    <!-- Header -->
    <header class="sticky top-0 z-50 backdrop-blur-xl bg-[var(--bg)]/80 border-b border-[var(--border)]">
      <div class="mx-auto max-w-6xl px-4 h-16 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
          <img src={logoUrl} alt="Aliento logo" class="h-8 w-8 rounded-lg" />
          <span class="font-semibold text-lg" data-i18n="title">Aliento Pay</span>
        </a>

        <!-- Navigation -->
        <div class="flex items-center gap-4">
          <!-- Language Switcher -->
          <div class="flex gap-2">
            <button
              data-lang="en"
              class="lang-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-colors bg-anakiwa-500 text-[var(--primary-contrast)]"
            >
              EN
            </button>
            <button
              data-lang="es"
              class="lang-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-colors text-[var(--mutedFg)] hover:text-[var(--fg)]"
            >
              ES
            </button>
          </div>

          <!-- Delegate Button -->
          <a
            href="/delegate"
            class="px-4 py-2 rounded-lg bg-gradient-to-r from-orange-500 to-orange-600 text-white font-medium hover:from-orange-600 hover:to-orange-700 transition-all duration-200 shadow-lg shadow-orange-500/20 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 focus:ring-offset-[var(--bg)]"
          >
            Delegate
          </a>

          <!-- Curator Login Button -->
          <a
            href="/login"
            class="px-4 py-2 rounded-lg bg-gradient-to-r from-[#09b1ee] to-[#0891c7] text-white font-medium hover:from-[#0891c7] hover:to-[#0284c7] transition-all duration-200 shadow-lg shadow-[#09b1ee]/20 focus:outline-none focus:ring-2 focus:ring-[#09b1ee] focus:ring-offset-2 focus:ring-offset-[var(--bg)]"
          >
            Curator Login
          </a>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <!-- Background gradient -->
      <div
        class="absolute inset-0 opacity-30 pointer-events-none"
        style="background: radial-gradient(60% 60% at 50% 10%, rgba(51,200,253,0.25) 0%, rgba(4,18,27,0) 60%)"
      ></div>

      <!-- Animated background particles -->
      <div class="absolute inset-0 opacity-10 pointer-events-none">
        <div class="absolute top-20 left-10 w-64 h-64 bg-anakiwa-500 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-slow"></div>
        <div class="absolute top-40 right-10 w-72 h-72 bg-anakiwa-600 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-slow" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-20 left-1/2 w-80 h-80 bg-anakiwa-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      </div>

      <div class="relative mx-auto max-w-6xl px-4 py-24 md:py-32">
        <!-- Trust badge -->
        <div class="flex justify-center mb-6 animate-fade-in">
          <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--bgElevated)] border border-[var(--border)] text-sm text-[var(--mutedFg)]">
            <img src={logoUrl} alt="Aliento" class="h-5 w-5 rounded" />
            <span>Powered by Aliento</span>
            <span class="text-[var(--border)]">•</span>
            <span>Hive ecosystem</span>
          </div>
        </div>

        <!-- Eyebrow -->
        <p class="text-center text-sm text-anakiwa-400 font-medium animate-slide-up" data-i18n="eyebrow">
          Delegate Hive Power. Support creators. Earn flexibly.
        </p>

        <!-- Main heading -->
        <h1 class="mt-4 text-center text-4xl md:text-6xl font-semibold leading-tight animate-slide-up" style="animation-delay: 0.1s;">
          <span class="bg-gradient-to-r from-[var(--fg)] via-anakiwa-200 to-anakiwa-300 bg-clip-text text-transparent" data-i18n="title">
            Aliento Pay
          </span>
        </h1>

        <!-- Subtitle -->
        <p class="mt-6 mx-auto max-w-2xl text-center text-lg text-[var(--mutedFg)] leading-relaxed animate-slide-up" style="animation-delay: 0.2s;" data-i18n="subtitle">
          Delegate to Aliento and choose how you get paid: HIVE, HBD, Hive Power — or donate to boost the project.
        </p>

        <!-- Two Portal Options -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto animate-slide-up" style="animation-delay: 0.3s;">
          <!-- Delegator Portal -->
          <a
            href="/delegate"
            class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-orange-500/10 to-orange-500/5 dark:from-orange-500/20 dark:to-orange-500/10 border-2 border-orange-500/30 hover:border-orange-500/50 p-8 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-orange-500/20"
          >
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-orange-500/20 to-transparent rounded-bl-full"></div>
            <div class="relative">
              <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform shadow-lg shadow-orange-500/30">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Delegate & Earn</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">Calculate earnings, choose payment preferences, and delegate HP to @aliento</p>
              <div class="flex items-center text-orange-500 font-semibold group-hover:gap-2 transition-all">
                <span>Start Delegating</span>
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            </div>
          </a>

          <!-- Curator Dashboard -->
          <a
            href="/login"
            class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-[#09b1ee]/10 to-[#09b1ee]/5 dark:from-[#09b1ee]/20 dark:to-[#09b1ee]/10 border-2 border-[#09b1ee]/30 hover:border-[#09b1ee]/50 p-8 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[#09b1ee]/20"
          >
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-[#09b1ee]/20 to-transparent rounded-bl-full"></div>
            <div class="relative">
              <div class="w-16 h-16 bg-gradient-to-br from-[#09b1ee] to-[#0891c7] rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform shadow-lg shadow-[#09b1ee]/30">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Curator Dashboard</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">Manage delegations, calculate distributions, and send curation rewards</p>
              <div class="flex items-center text-[#09b1ee] font-semibold group-hover:gap-2 transition-all">
                <span>Curator Login</span>
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            </div>
          </a>
        </div>

        <!-- Learn More Link -->
        <div class="mt-8 flex justify-center">
          <a
            href="#how-it-works"
            class="text-[var(--mutedFg)] hover:text-[var(--fg)] font-medium transition-colors flex items-center gap-2 group"
          >
            <span data-i18n="ctaSecondary">How it works</span>
            <svg class="w-4 h-4 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- How it works Section -->
    <section id="how-it-works" class="mx-auto max-w-6xl px-4 py-16 md:py-24">
      <h2 class="text-center text-3xl md:text-4xl font-semibold mb-12" data-i18n="how.title">
        How it works
      </h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {[0, 1, 2, 3].map((i) => (
