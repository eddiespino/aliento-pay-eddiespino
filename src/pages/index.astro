            key={i}
            class="group relative rounded-2xl border border-[var(--border)] bg-[var(--bgElevated)] p-6 hover:border-anakiwa-600 hover:shadow-lg hover:shadow-anakiwa-500/20 transition-all duration-300 transform hover:-translate-y-1"
          >
            <div class="mb-4 flex items-center gap-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-anakiwa-500/20 text-anakiwa-400 font-bold group-hover:bg-anakiwa-500 group-hover:text-[var(--primary-contrast)] transition-colors">
                {i + 1}
              </div>
              <div class="h-px flex-1 bg-[var(--border)] group-hover:bg-anakiwa-600 transition-colors"></div>
            </div>
            <div class="font-medium text-[var(--fg)] leading-relaxed" data-i18n={`how.steps.${i}`}>
              Step {i + 1}
