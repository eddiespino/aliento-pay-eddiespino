      <div class="space-y-4">
        {[0, 1, 2, 3, 4].map((i) => (
          <details
            key={i}
            class="group rounded-xl border border-[var(--border)] bg-[var(--bgElevated)] overflow-hidden hover:border-anakiwa-600 transition-colors"
          >
            <summary class="flex items-center justify-between cursor-pointer list-none px-6 py-4 font-medium text-[var(--fg)] hover:text-anakiwa-400 transition-colors select-none">
              <span data-i18n={`faq.items.${i}.q`}>Question {i + 1}</span>
              <svg
                class="w-5 h-5 transform transition-transform group-open:rotate-180"
                fill="none"
