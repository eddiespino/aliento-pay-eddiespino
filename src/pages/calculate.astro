    // Funci√≥n para actualizar paso de carga
    function updateLoadingStep(step) {
      const stepElements = {
        2: document.getElementById('loading-step-2'),
        3: document.getElementById('loading-step-3'),
      };

      if (stepElements[step]) {
        stepElements[step].classList.remove('opacity-50');
        const dot = stepElements[step].querySelector('.w-2');
        if (dot) {
          dot.classList.add('animate-pulse');
          dot.classList.remove('bg-yellow-500', 'bg-blue-500');
          dot.classList.add('bg-green-500');
        }
      }
    }

    // Funci√≥n de procesamiento progresivo mejorado
    async function processProgressively() {
      console.log('üîÑ Iniciando procesamiento progresivo...');

      try {
        // Paso 1: Mostrar loading mejorado
        showEnhancedLoading();

        // Paso 2: Cargar filtros
        updateLoadingStep(2);
        const filters = await loadFiltersFromClient();
        if (!filters) {
          throw new Error('No se pudieron cargar los filtros');
        }

        await new Promise(resolve => setTimeout(resolve, 300)); // Mini delay para UX

        // Paso 3: Procesar c√°lculos
        updateLoadingStep(3);
        const result = await calculateAndProcess(filters);

        // Limpiar flags de carga
        sessionStorage.removeItem('calculate_loading');
        sessionStorage.removeItem('calculate_source');

        return result;
      } catch (error) {
        console.error('‚ùå Error en procesamiento progresivo:', error);
        sessionStorage.removeItem('calculate_loading');
        showError('Error procesando los c√°lculos: ' + error.message);
        throw error;
      }
    }

