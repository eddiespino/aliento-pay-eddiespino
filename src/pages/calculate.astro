import Layout from '../layouts/Layout.astro';
import CurationCalculateTable from '../ui/components/CurationCalculateTable.astro';
import {
  decodeFilters,
  calculateCurationDistribution,
  type CalculateFilters,
  type CalculationResult,
} from '../lib/calculate-curation';
import CalculationParams from '../ui/components/CalculationParams.astro';
import { calculateDynamicPayments, getPaymentConfigForAccount } from '../lib/payment-calculator';
import BrandCard from '../ui/base/BrandCard.astro';

// ‚úÖ OBTENER USUARIO AUTENTICADO EN LUGAR DE VALOR HARDCODEADO
import { getAuthenticatedUser, isAuthenticated } from '../middleware';
import { getCurrentLocale, getTranslation, getLocalizedPath } from '../i18n';

// Get current locale and translation function
const currentLocale = getCurrentLocale(Astro);
const t = (key: string) => getTranslation(currentLocale, key);

// Verificar autenticaci√≥n en server-side
const authenticatedUser = getAuthenticatedUser(Astro);
if (!authenticatedUser) {
  // Redirigir a login si no est√° autenticado (preservando locale)
  return Astro.redirect(getLocalizedPath('/?reason=auth_required', currentLocale));
}

const userAccount = authenticatedUser;
const defaultInterestPercentage = 10;

// Estado inicial
let filters: CalculateFilters;
let calculationResult: CalculationResult | null = null;
let error: string | null = null;
let curationStats: any = null;
let dynamicPaymentConfig: any = null;
let filtersSource = 'default';

// Filtros por defecto
const defaultFilters: CalculateFilters = {
  timePeriod: 30,
  minimumHP: 50,
  excludedUsers: [],
  applied: true,
  curationPeriod: '30d',
  curationValue: 0,
};

// 1. Obtener filtros de la URL (solo en el servidor)
const url = new URL(Astro.request.url);
const filtersParam = url.searchParams.get('filters');
const sourceParam = url.searchParams.get('source'); // Nuevo: detectar si viene del dashboard

// Por defecto, asumimos que no hay filtros v√°lidos desde el servidor
let hasValidFiltersFromServer = false;
let isFromDashboard = sourceParam === 'dashboard';

if (filtersParam) {
  try {
    filters = decodeFilters(filtersParam);
    filtersSource = 'url';
    hasValidFiltersFromServer = true;
    console.log('‚úÖ Filtros desde URL:', filters);
  } catch (err) {
    error = 'Error decodificando filtros de URL';
    filters = { ...defaultFilters, applied: false };
  }
} else {
  // Si no hay filtros en la URL del servidor, configuramos para procesamiento en el cliente
  console.log('‚ö†Ô∏è No hay filtros en URL del servidor, configurando para procesamiento en cliente');
  filters = { ...defaultFilters, applied: false }; // Marcar como no aplicados
}

// 2. OPTIMIZACI√ìN: Si viene del dashboard, NO hacer c√°lculos en servidor
// Dejar que el cliente maneje todo para navegaci√≥n m√°s r√°pida
if (isFromDashboard) {
  console.log('‚ö° Navegaci√≥n desde Dashboard - c√°lculos diferidos al cliente');
  // No calcular nada en servidor, solo preparar la p√°gina
  filters.applied = false; // Marcar para procesamiento en cliente
} else if (
  hasValidFiltersFromServer &&
  !error &&
  filters.curationValue &&
  filters.curationValue > 0
) {
  // Solo calcular en servidor si NO viene del dashboard y tiene todos los datos
  try {
    console.log(
      'üöÄ Usando curationValue desde filtros, evitando rec√°lculo:',
      filters.curationValue
    );

    // 3. Calcular distribuci√≥n para el usuario autenticado
    calculationResult = await calculateCurationDistribution(
      userAccount,
      filters,
      filters.curationValue || 0,
      defaultInterestPercentage
    );

    // 4. Calcular pagos din√°micos si es necesario con configuraci√≥n personalizada
    if (calculationResult) {
      const userPaymentConfig = await getPaymentConfigForAccount(userAccount);
      dynamicPaymentConfig = await calculateDynamicPayments(
        calculationResult,
        filters,
        userPaymentConfig
      );
    }
  } catch (err) {
    console.error('Error en c√°lculos:', err);
    error = err instanceof Error ? err.message : 'Error en c√°lculos';
  }
} else if (hasValidFiltersFromServer && !error) {
  // Solo si necesitamos obtener las estad√≠sticas de curaci√≥n
  console.log('‚ö†Ô∏è curationValue no definido, necesitamos obtener estad√≠sticas de curaci√≥n');
  // Dejar que el cliente maneje esto para usar datos del Dashboard
}

const pageTitle = t('calculate.title');
const pageDescription = t('calculate.description');
