    // Funciones de formato (clones de las funciones del componente Astro)
    function formatHP(hp) {
      return hp.toFixed(2);
    }

    function formatPercentage(percentage) {
      return `${percentage.toFixed(2)}%`;
    }

    function formatHive(hive) {
      return hive.toFixed(3);
    }

    function formatDate(timestamp) {
      return new Date(timestamp).toLocaleDateString('es-ES', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      });
    }

    // Funci√≥n para reinicializar el listener de cambio de porcentaje
    function initializePercentageChangeListener(originalTotal) {
      // Solo inicializar una vez para evitar m√∫ltiples listeners
      if (tableUpdateListenerInitialized) return;

      window.addEventListener('percentageChange', event => {
        const { percentage, newAmount, userHPPercentage, sliderPercentage } = event.detail;

        // Actualizar el total en el header
        const totalHiveElement = document.getElementById('total-hive-display');
        if (totalHiveElement) {
          totalHiveElement.textContent = `${window.i18n.table.totalHive}: ${newAmount.toFixed(3)}`;
        }

        // Actualizar cada fila de la tabla
        const delegatorRows = document.querySelectorAll('.delegator-row');
        delegatorRows.forEach(row => {
          const baseHive = parseFloat(row.getAttribute('data-base-hive') || '0');

          // Calcular nuevo valor basado en el porcentaje cambiado
          const ratio = newAmount / originalTotal;
          const newHiveValue = baseHive * ratio;

          // Actualizar la celda de "Hive a Recibir"
          const hiveCell = row.querySelector('.hive-to-receive');
          if (hiveCell) {
            hiveCell.textContent = `${newHiveValue.toFixed(3)} HIVE`;

            // Agregar efecto visual de actualizaci√≥n
            hiveCell.classList.add('animate-pulse');
            setTimeout(() => {
              hiveCell.classList.remove('animate-pulse');
            }, 500);
          }
        });
      });

      tableUpdateListenerInitialized = true;
    }

    // Funci√≥n helper para actualizar elementos
    function updateElement(id, content) {
      const el = document.getElementById(id);
      if (el) {
        el.textContent = content;
      }
    }

    // Funci√≥n para detectar navegaci√≥n desde dashboard
    function isFromDashboard() {
      const urlParams = new URLSearchParams(window.location.search);
      const source = urlParams.get('source');
      const sessionFlag = sessionStorage.getItem('calculate_loading');
      return source === 'dashboard' || sessionFlag === 'true';
    }

