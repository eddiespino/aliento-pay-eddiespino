</Layout>

<script>
  // Script del cliente para procesamiento de filtros
  (function () {
    'use strict';

    console.log('üöÄ Calculate - Script del cliente iniciado');

    // Variable para controlar si ya existe un listener
    let tableUpdateListenerInitialized = false;

    // Variables globales para capturar valores del filtro de HP
    let globalUserHPPercentage = 0;
    let globalSliderPercentage = 0;

    // Verificar si hay filtros en la URL del cliente
    const urlParams = new URLSearchParams(window.location.search);
    const filtersParam = urlParams.get('filters');

    console.log('üîç Par√°metros URL (cliente):', filtersParam);

    if (filtersParam) {
      console.log('‚úÖ Filtros encontrados en URL');

      try {
        const filtersObj = JSON.parse(decodeURIComponent(filtersParam));
        console.log('üìã Filtros decodificados:', filtersObj);

        if (filtersObj && filtersObj.applied) {
          // Actualizar UI inmediatamente
          updateUIWithFilters(filtersObj);
          return;
        }
      } catch (error) {
        console.error('‚ùå Error decodificando filtros:', error);
      }
    }

    // Si no hay filtros en URL, buscar en sessionStorage
    console.log('üîç Buscando en sessionStorage...');

    const sessionFilters = sessionStorage.getItem('appliedFilters');
    if (sessionFilters) {
      try {
        const filtersObj = JSON.parse(sessionFilters);
        console.log('üì¶ Filtros desde sessionStorage:', filtersObj);

        if (filtersObj && filtersObj.applied) {
          const encodedFilters = encodeURIComponent(JSON.stringify(filtersObj));
          console.log('‚Ü©Ô∏è Redirigiendo con filtros...');
          window.location.href = `/calculate?filters=${encodedFilters}`;
          return;
        }
      } catch (error) {
        console.error('‚ùå Error procesando sessionStorage:', error);
      }
    }

    console.log('üîô No hay filtros, redirigiendo al dashboard...');
    setTimeout(() => {
      window.location.href = '/dashboard';
    }, 2000);

    // Funci√≥n para actualizar la UI con filtros
    function updateUIWithFilters(filters) {
      console.log('üé® Actualizando UI con filtros:', filters);

      // Ocultar loading
      const loadingEl = document.getElementById('loading-message');
      if (loadingEl) {
        loadingEl.style.display = 'none';
      }

      // Mostrar secci√≥n de filtros
      const filtersEl = document.getElementById('filters-section');
      if (filtersEl) {
        filtersEl.style.display = 'block';
      }

      // Actualizar valores de filtros
      updateElement('filter-time-period', `${filters.timePeriod} ${window.i18n.filters.days}`);
      updateElement('filter-minimum-hp', `${filters.minimumHP} HP`);
      updateElement('filter-curation-period', filters.curationPeriod);
      updateElement('filter-excluded-users', `${filters.excludedUsers.length} ${window.i18n.filters.users}`);

      // OPTIMIZACI√ìN: Verificar si ya tenemos curationValue
      if (filters.curationValue && filters.curationValue > 0) {
        updateElement('filter-curation-value', `${filters.curationValue.toFixed(4)} HP`);
        console.log('‚úÖ curationValue ya disponible desde filtros:', filters.curationValue);

        // Mostrar usuarios excluidos si hay
        if (filters.excludedUsers.length > 0) {
          const excludedListEl = document.getElementById('excluded-users-list');
          if (excludedListEl) {
            excludedListEl.style.display = 'block';
          }
        }

        // Proceder directamente con el c√°lculo (sin recalcular curaci√≥n)
        showLoadingData();
        fetchCalculationData(filters);
      } else {
        // Intentar obtener curationValue del Dashboard
        console.log('üîÑ Intentando obtener curationValue del Dashboard...');

        const success = tryGetCurationValueFromDashboard(filters);
        if (success) {
          console.log('‚úÖ curationValue obtenido del Dashboard');
          updateElement('filter-curation-value', `${filters.curationValue.toFixed(4)} HP`);

          // Mostrar usuarios excluidos si hay
          if (filters.excludedUsers.length > 0) {
            const excludedListEl = document.getElementById('excluded-users-list');
            if (excludedListEl) {
              excludedListEl.style.display = 'block';
            }
          }

          // Proceder con el c√°lculo
          showLoadingData();
          fetchCalculationData(filters);
        } else {
          console.warn('‚ö†Ô∏è No se pudo obtener curationValue del Dashboard, usando API');

          // Mostrar usuarios excluidos si hay
          if (filters.excludedUsers.length > 0) {
            const excludedListEl = document.getElementById('excluded-users-list');
            if (excludedListEl) {
              excludedListEl.style.display = 'block';
            }
          }

          // Proceder con el c√°lculo (la API obtendr√° curationValue)
          showLoadingData();
          fetchCalculationData(filters);
        }
      }

      console.log('‚úÖ UI actualizada con filtros');
    }

    // Funci√≥n para intentar obtener curationValue del Dashboard
    function tryGetCurationValueFromDashboard(filters) {
      try {
        console.log('üîç Intentando obtener curationValue del Dashboard mejorado...');

        // 1. Verificar si tenemos acceso a la funci√≥n global del Dashboard
        if (typeof window.getCurationStatsData === 'function') {
          const curationData = window.getCurationStatsData();

          if (curationData && !curationData.error) {
            // Actualizar curationValue seg√∫n el per√≠odo
            switch (filters.curationPeriod) {
              case '24h':
                filters.curationValue = curationData.curation24h;
                break;
              case '7d':
                filters.curationValue = curationData.curation7d;
                break;
              case '30d':
              default:
                filters.curationValue = curationData.curation30d;
                break;
            }

            console.log(
              `‚úÖ curationValue establecido desde Dashboard (${curationData.source}): ${filters.curationValue} HP`
            );
            return true;
          }
        }

        // 2. Fallback: Verificar directamente en localStorage con validaci√≥n mejorada
        const dashboardData = localStorage.getItem('dashboard_curation_stats');
        if (dashboardData) {
          const parsedData = JSON.parse(dashboardData);
          console.log('üì¶ Datos encontrados en localStorage:', parsedData);

          // Verificar que los datos sean v√°lidos y no est√©n expirados
          if (
            parsedData &&
            parsedData.timestamp &&
            !parsedData.error &&
            Date.now() - parsedData.timestamp < 10 * 60 * 1000
          ) {
            // Datos v√°lidos (menos de 10 minutos)
            switch (filters.curationPeriod) {
              case '24h':
                filters.curationValue = parsedData.curation24h || 0;
                break;
              case '7d':
                filters.curationValue = parsedData.curation7d || 0;
                break;
              case '30d':
              default:
                filters.curationValue = parsedData.curation30d || 0;
                break;
            }

            const ageMinutes = Math.round((Date.now() - parsedData.timestamp) / (1000 * 60));
            console.log(
              `‚úÖ curationValue obtenido desde localStorage (${ageMinutes}m): ${filters.curationValue} HP`
            );
            return true;
          } else {
