---
import CurationCalculateTable from "./CurationCalculateTable.astro";

export interface Props {
  calculationResult?: {
    delegators: Array<{
      delegator: string;
      hiveToReceive: number;
      // otros campos...
    }>;
    totalHP: number;
    totalHiveToDistribute: number;
    cutoffDate: string;
    processedOperations: number;
  } | null;
  error?: string | null;
  filters: {
    curationPeriod: string;
    // otros campos necesarios para el enlace de pagos
  };
}

const { calculationResult, error, filters } = Astro.props;
---

<!-- Mensajes de estado -->
{error && (
  <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-8">
    <h3 class="text-sm font-medium text-red-800 dark:text-red-200">Error</h3>
    <p class="text-sm text-red-700 dark:text-red-300 mt-1">{error}</p>
  </div>
)}

<!-- Tabla de resultados -->
{!error && (
  <CurationCalculateTable
    delegators={calculationResult?.delegators || []}
    totalHP={calculationResult?.totalHP || 0}
    totalHiveToDistribute={calculationResult?.totalHiveToDistribute || 0}
    isLoading={false}
  />
)}

