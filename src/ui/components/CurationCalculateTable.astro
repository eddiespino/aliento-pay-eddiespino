---
import type { DelegatorData } from '../../lib/calculate-curation';
import { formatHP, formatPercentage, formatHive } from '../../lib/calculate-curation';
// Avatar handling will be done client-side using the global cache service

interface Props {
  delegators: DelegatorData[];
  totalHP: number;
  totalHiveToDistribute: number;
  isLoading?: boolean;
}

const { delegators, totalHP, totalHiveToDistribute, isLoading = false } = Astro.props;

function formatDate(timestamp: string): string {
  return new Date(timestamp).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<div 
  id="curation-table-container"
  class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden"
  data-total-hive-to-distribute={totalHiveToDistribute}
>
  <!-- Header de la tabla -->
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
          Distribuci√≥n de Curaci√≥n
        </h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
          {delegators.length} delegadores v√°lidos
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 text-sm">
        <div class="bg-blue-50 dark:bg-blue-900/20 px-3 py-2 rounded-lg">
          <span class="text-blue-600 dark:text-blue-400 font-medium">
            Total HP: {formatHP(totalHP)}
          </span>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 px-3 py-2 rounded-lg">
          <span id="total-hive-display" class="text-green-600 dark:text-green-400 font-medium">
            Total Hive: {formatHive(totalHiveToDistribute)}
          </span>
        </div>
      </div>
    </div>
  </div>

  {isLoading ? (
    <!-- Estado de carga -->
    <div class="px-6 py-12 text-center">
      <div class="inline-flex items-center justify-center w-12 h-12 bg-blue-100 dark:bg-blue-900/20 rounded-lg mb-4">
        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      <p class="text-gray-600 dark:text-gray-400">Calculando distribuci√≥n...</p>
    </div>
  ) : delegators.length === 0 ? (
    <!-- Estado vac√≠o -->
    <div class="px-6 py-12 text-center">
      <div class="inline-flex items-center justify-center w-12 h-12 bg-gray-100 dark:bg-gray-700 rounded-lg mb-4">
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <p class="text-gray-600 dark:text-gray-400">No hay delegadores que cumplan los criterios especificados</p>
    </div>
  ) : (
    <!-- Tabla de delegadores -->
    <div class="overflow-x-auto">
      <table class="w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Delegador
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              HP Delegado
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Participaci√≥n
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Hive a Recibir
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              Fecha Delegaci√≥n
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          {delegators.map((delegator, index) => (
            <tr 
              id={`delegator-row-${index}`}
              class="delegator-row hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors duration-200"
              data-row-type="delegator"
              data-percentage={delegator.percentage}
              data-base-hive={delegator.hiveToReceive}
              data-delegator={delegator.delegator}
            >
              <td class="px-6 py-4 whitespace-nowrap" data-delegator={delegator.delegator}>
                <div class="flex items-center">
                  <div class="avatar-fallback w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-sm font-medium">
                    {delegator.delegator.charAt(0).toUpperCase()}
                  </div>
                  <div class="avatar-img ml-[-2rem]"></div>
                  <div class="ml-3">
                    <div class="text-sm font-medium text-gray-900 dark:text-white">
                      @{delegator.delegator}
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      #{index + 1}
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="text-sm font-medium text-gray-900 dark:text-white">
                  {formatHP(delegator.hp)} HP
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="text-sm font-medium text-gray-900 dark:text-white">
                  {formatPercentage(delegator.percentage)}
                </div>
                <div class="text-xs text-gray-500 dark:text-gray-400">
                  de {formatHP(totalHP)} HP
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div id={`hive-amount-${index}`} class="hive-to-receive text-sm font-medium text-green-600 dark:text-green-400 transition-all duration-300">
                  {formatHive(delegator.hiveToReceive)} HIVE
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="text-sm text-gray-900 dark:text-white">
                  {formatDate(delegator.timestamp)}
                </div>
                <div class="text-xs text-gray-500 dark:text-gray-400">
                  Bloque #{delegator.blockNum.toLocaleString()}
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <!-- Footer de la tabla -->
    <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Mostrando {delegators.length} delegadores v√°lidos
        </div>
        <div class="flex items-center gap-4 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
            <span class="text-gray-600 dark:text-gray-400">HP Delegado</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-gray-600 dark:text-gray-400">Hive a Recibir</span>
          </div>
        </div>
      </div>
    </div>
  )}
</div>

<script>
 
  window.addEventListener('percentageChange', (event) => {
    const customEvent = event as CustomEvent;
    const { percentage, newAmount } = customEvent.detail;
    
    
    const totalHiveElement = document.getElementById('total-hive-display');
    if (totalHiveElement) {
      totalHiveElement.textContent = `Total Hive: ${newAmount.toFixed(3)}`;
    }
    

    const delegatorRows = document.querySelectorAll('[data-row-type="delegator"]');
    delegatorRows.forEach((row, index) => {
      const baseHiveStr = row.getAttribute('data-base-hive');
      const delegatorPercentageStr = row.getAttribute('data-percentage');
      
      if (!baseHiveStr || !delegatorPercentageStr) return;
      
      const baseHive = parseFloat(baseHiveStr);
      const delegatorPercentage = parseFloat(delegatorPercentageStr);
      
      // Calcular nuevo valor basado en el porcentaje cambiado
      const container = document.getElementById('curation-table-container');
      const originalTotal = parseFloat(container?.getAttribute('data-total-hive-to-distribute') || '0');
      const newTotal = newAmount;
      const ratio = newTotal / originalTotal;
      const newHiveValue = baseHive * ratio;
      
    
      const hiveCell = document.getElementById(`hive-amount-${index}`);
      if (hiveCell) {
        hiveCell.textContent = `${newHiveValue.toFixed(3)} HIVE`;
        
        // Agregar efecto visual de actualizaci√≥n
        hiveCell.classList.add('animate-pulse');
        setTimeout(() => {
          hiveCell.classList.remove('animate-pulse');
        }, 500);
      }
    });
  });

  // ‚úÖ Carga de avatares usando el servicio global de cache
  async function loadAvatarsWithCache() {
    try {
      console.log('üñºÔ∏è CurationCalculateTable: Iniciando carga de avatares...');
      
      // Importar servicio de avatar cache
      const { getAvatarCache } = await import('../../lib/avatar-cache');
      const avatarCache = getAvatarCache();
      
      // Obtener todas las filas de delegadores
      const delegatorRows = document.querySelectorAll('tr[data-delegator]');
      
      if (delegatorRows.length === 0) {
        console.log('‚ÑπÔ∏è CurationCalculateTable: No se encontraron filas de delegadores');
        return;
      }
      
      // Extraer usernames para precarga
      const usernames = Array.from(delegatorRows).map(row => 
        row.getAttribute('data-delegator')
      ).filter(Boolean);
      
      console.log(`‚ö° CurationCalculateTable: Precargando ${usernames.length} avatares...`);
      
      // Precargar todos los avatares de una vez
      await avatarCache.preloadAvatars(usernames as string[]);
      
      // Aplicar avatares a cada fila
      delegatorRows.forEach(async (row) => {
        const username = row.getAttribute('data-delegator');
        if (!username) return;
        
        const avatarContainer = row.querySelector('.avatar-img');
        const fallback = row.querySelector('.avatar-fallback');
        
        if (!avatarContainer || !fallback) return;
        
        try {
          const avatarUrl = avatarCache.getAvatarUrl(username);
          
          // Crear imagen
          const img = document.createElement('img');
          img.src = avatarUrl;
          img.alt = `@${username}`;
          img.className = 'w-8 h-8 rounded-full object-cover';
          
          // Manejar carga exitosa
          img.onload = function() {
            avatarContainer.appendChild(img);
            (fallback as HTMLElement).style.display = 'none';
            console.log(`‚úÖ CurationCalculateTable: Avatar cargado para @${username}`);
          };
          
          // Manejar error de carga
          img.onerror = function() {
            console.log(`‚ö†Ô∏è CurationCalculateTable: Avatar fallido para @${username}, usando fallback`);
            // Mantener fallback visible
          };
          
        } catch (error) {
          console.warn(`‚ö†Ô∏è CurationCalculateTable: Error procesando avatar para @${username}:`, error);
        }
      });
      
      console.log(`‚úÖ CurationCalculateTable: Proceso de carga de avatares completado`);
      
    } catch (error) {
      console.error('‚ùå CurationCalculateTable: Error en loadAvatarsWithCache:', error);
    }
  }

  // Inicializar avatares cuando el DOM est√© listo
  window.addEventListener('DOMContentLoaded', () => {
    setTimeout(loadAvatarsWithCache, 100);
  });
</script>

<style>
  /* Animaci√≥n suave para hover */
  tbody tr {
    transition: all 0.2s ease-in-out;
  }
  
  /* Mejora visual para n√∫meros */
  .text-right {
    font-variant-numeric: tabular-nums;
  }
  
  /* Animaci√≥n para valores que cambian */
  .hive-to-receive {
    transition: all 0.3s ease-in-out;
  }
  
  /* Efecto de actualizaci√≥n */
  .animate-pulse {
    animation: pulse 0.5s ease-in-out;
  }
  
  @keyframes pulse {
    0% {
      transform: scale(1);
      background-color: rgba(34, 197, 94, 0.1);
    }
    50% {
      transform: scale(1.05);
      background-color: rgba(34, 197, 94, 0.2);
    }
    100% {
      transform: scale(1);
      background-color: rgba(34, 197, 94, 0.1);
    }
  }
</style>
